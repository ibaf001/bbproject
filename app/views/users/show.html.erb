<% provide(:title, @user.username ) %>



   <h1>
     <%= gravatar_for @user %>
    <%= @user.username %>
   </h1>
   <%= render 'follow_form' if logged_in? %>
       <section>
          <%= render 'shared/stats' %>
     </section>

   <div>
     <% if @user.microposts.any? %>
       <h3> Microposts (<%= @user.microposts.count %>) </h3>
       <ol>
          <%= render @microposts %>
       </ol>
       <%= will_paginate @microposts %>
     <% end %>
   </div>
 





