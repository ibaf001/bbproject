


<%= form_for(@user) do |f| %>

 <%= render 'shared/error_messages' , object: f.object %>
 

 <div class="form-group">
  <%= f.label :username %><br>
  <%= f.text_field :username, class: "col-md-12" %>
 </div>

 <div class="form-group">
  <%= f.label :email %><br>
  <%= f.text_field :email,class: "col-md-12" %>
 </div>

 <div class="form-group">
  <%= f.label :password %><br>
  <%= f.password_field :password ,class: "col-md-12" %><br>
 </div>
 
 <div class="form-group">
  <%= f.label :password_confirmation, "Confirmation" %><br>
  <%= f.password_field :password_confirmation, class: "col-md-12" %>
 </div>
 <br>
  <%= f.submit @user.new_record? ? "Register" : "Save changes" , class: "btn btn-primary col-md-12" %>
<% end %>



